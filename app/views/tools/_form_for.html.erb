<%= form_for @tool do |f| %>
  <%= render "layouts/form_errors", object: f.object %>

  <div class="small-12 medium-7 column">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="small-12 medium-5 column">
    <%= f.label :category_id, "Category" %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name"), prompt: "Select a category" %>
  </div>

  <div class="small-12 column">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10 %>
    <%= f.submit "Submit", class: "button radius" %>
  </div>

<% end %>
